    <div class="alert alert-danger" role="alert">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this from being saved:</h3>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
