<h1>Listing posts</h1>
    <% @posts.each do |post| %>
      <div class="panel panel-default">
        <div class="panel-heading">
            <%= post.title %>
            <p class="navbar-text navbar-right">Published at <%= time_ago_in_words(post.created_at) %> by <%= post.user.email %></p>
        </div>
        <div class="panel-body">
          <%= post.text %>
        </div>
        <span class="label label-info"><%= link_to 'Show', post %></span>
        <% if user_signed_in?&&(post.user == current_user) %>
          <span class="label label-info"><%= link_to 'Edit', edit_post_path(post) %></span>
          <span class="label label-info"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        <% end %>
      </div>
        
  <% end %>

<br>


<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>